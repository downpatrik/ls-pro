extends ../template

block variables
    - var  title = 'Обо мне'

block content
    section.header-about
    .header-about__socials
        ul.socials
            each item in ['fb','git','in']
                li.socials__item
                    a(href="" class=`socials__item_${item}`).social
        .header-about__menu
            .hamburger
        .header-about__title
            .section-title
                img.section-title__pic
            .header-about__user
                .user__pic
                    img.user__img
                .user__description
                    .user__name Гильфанов Ильнур
                    .user__info Личный сайт разработчика
        .header-about__scroll-btn
            button(type="button").arrow-down
    section.section-about
        .section-about__left
            .section-about__triangle.section-about__triangle_left
                svg.triangle.triangle_fill_white
            .section-about__left-title
                .block-title Обо мне
            .section-about__left-content
                .user-description
                    .user-description__image
                        img.user-description__img
                    .user-desciption__title
                        .block-subtitle Кто я
                    .user-description__text
                        p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты.
                        p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты.
        .section-about__right
            .section-about__triangle.section-about__triangle_right
                svg.triangle.triangle_fill_beige
            .section-about__right-title
                .block-subtitle Чем я могу быть вам поелезен
            .section-about__right-description
                p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты.
            .section-about__right-content
                ul.skills-list
                    each skill in ['Frontend', 'Backend', 'Workflow']
                        li.slikks-list__item
                            .skills-row
                                .skills-row__title= skill
                                ul.skills-row__list
                                    li.skills-row__item
                                        .skill
                                            svg.skill__circle
                                            .skill__title
    section.section.map
        .google-map
        .map__data              
            .contacts
                .contacts__title
                    .block-subtitle Контакты
                ul.contacts__list
                    -
                        var contacts = [
                            ['vk', 'skype_kdn'],
                            ['mail', 'astahov@mail.ru'],
                            ['phone', '+7 123 456 78 90']
                        ]           
                    each item in contacts 
                        li.contacts__item.contacts-row
                            .contacts-row__icon #{item[0]}
                            .contacts-row__content #{item[1]}
    footer.footer
        .footer__row
            .footer__col.footer__col-left
                .footer__menu
                    nav.menu
                        ul.menu__list
                            each item in ['Мои работы', 'Обо мне']
                                li.menu__item
                                    a(href="#").menu__link= item

            .footer__col.footer__col-right
                .footer__socials
                    ul.socials.socials_rounded
                        each item in ['fb','git','in']
                            li.socials__item
                                a(href="" class=`socials__item_${item}`).social
        .footer-row
            .footer__col.footer__col-left
                .footer__text
                    p Далеко-далеко за словесными горами в стране гласных и согласных живут рыбные тексты.
            .footer__col.footer__col-right
                .footer-copyright
                    #{copy}
