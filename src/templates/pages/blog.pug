extends ../template

block variables
    - var  title = 'Блог'

block content
    section.main-header.blog-header_hight
        .main-header__socials
            ul.socials
                each item in ['vk','git','in']
                    li.socials__item
                        a(href="#" class=`socials__item_${item}`)
        .main-header__menu
            .hamburger(onclick="document.getElementById('hamburger__menu').style.display='block'")
        .main-header__title.blog-header_title
            .section-title
                img.section-title__pic(src=blogHeader_img, alt="Портфолио")
        .main-header__user
            .user__pic
                img.user__img(src=avatar_img, alt="")
            .user__description
                .block-subtitle БЛОГ
                .user__info Статьи которые я написал
        .main-header__scroll-btn.blog-header_btn
            button(type="button").arrow-down
        .main-header__triangle.blog-header_triangle
            svg.triangle(viewbox="0 0 1000 85", version="1.1", xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink")
                polygon.triangle_left_white(points="0,0   0,86   500.8,86   500.8,75")
                polygon.triangle_right_beige(points="1000,0   1000,86   500,86   500,75")
